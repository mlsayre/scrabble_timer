  
   <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "timer" %>
    <%= csrf_meta_tags %>


 <p class="ex">
 <%= "Welcome, #{params[:player1]} and #{params[:player2]}!" %>
 <%= "#{params[:player1]} has #{params[:player1time]} minutes and #{params[:player2]} has #{params[:player2time]} minutes in which to play all of their turns for the game. Going beyond those times will result in a 10 point penalty per minute (or fraction of a minute) gone over. To start, press the button of the player who will be making the first move." %>
 <br><br>
  <button id="Start1Button" onclick="StartP1()"><%= params[:player1] %> plays first.</button>
 <button id="Start2Button" onclick="StartP2()"><%= params[:player2] %> plays first.</button>
<h2>
 <center><table border="2" bgcolor="#DBF6FF">
 <tr>
 	<td style="padding: 10px;"><font size=5><center><%= params[:player1] %></center></font></td>
 	<td style="padding: 10px;"><font size=5><center><%= params[:player2] %></center></font></td>
 </td>
<tr>
<td id="tdP1" bgcolor="#FFDEDE" style="padding: 50px;"><div id='p1timer' /></div></td>
<td id="tdP2" bgcolor="#FFDEDE" style="padding: 50px;"><div id='p2timer' /></div></td>
</tr>
</table>

  <button id="Complete1Button" onclick="player1Pause()"><%= params[:player1] %> turn complete.</button>
  <button id="Complete2Button" onclick="player2Pause()"><%= params[:player2] %> turn complete.</button>
  <br>
  <button id="PauseButton" onclick="GamePause()">Pause/Resume Game</button>
  <div id="StartText"><h3>Good luck!</h3></div>



<!-- Player 1 timer code -->
<script type="text/javascript">
var i1 = <%= params[:player1time] %>;
var t1 = i1 * 60;
window.onload = CreateP1Timer("p1timer", t1);</script>



<!-- Player 2 timer code -->
<script type="text/javascript">
var i2 = <%= params[:player2time] %>;
var t2 = i2 * 60;
window.onload = CreateP2Timer("p2timer", t2);</script>



 





